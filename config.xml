<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.fourdesks.touchthebubble" version="1.0.1.5">

	<name>TouchTheBubble</name>
	<description>The beautiful and addictive hit game Touch The Bubble, Select a colored Bubble and start Touching The Bubble.</description>
	<author href="http://www.fourdesks.com" email="info@fourdesks.com">nareshg</author>

	<icon src="icon-128.png" width="128" height="128" />
	<icon src="icon-256.png" width="256" height="256" gap:role="default" />

	<preference name="permissions" value="none"/>
	<preference name="android-targetSdkVersion" value="19" />

	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	<gap:plugin name="org.apache.cordova.media" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="target-device" value="universal" />
	<preference name="KeepRunning" value="true"/>
	<!-- Optional splash screen image, e.g.: -->
	<gap:splash src="splash.png"  gap:platform="android" width="720" height="1280" />
	 <gap:platform name="android" />
	<gap:platform name="winphone" />
	 	 <gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />
		 <gap:plugin name="com.plugins.shortcut" version="0.1.1" />
		 <gap:plugin name="org.apache.cordova.vibration" version="0.3.7" />
		 <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.7.4" />

</widget>